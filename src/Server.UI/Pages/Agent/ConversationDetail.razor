                if (existing == null)
                {
                    _conversationViewers.Add(new ConversationViewerDto
                    {
                        UserId = agentId,
                        UserName = agentName,
                        DisplayName = agentName,
                        JoinedAt = DateTime.UtcNow,
                        IsCurrentUser = false
